<%!
	//(실습) 주문한 내역에 따라 계산하고 내역에 표시
	String coffee = getInitParameter("coffee");
	String su = getInitParameter("su");
	String money = getInitParameter("money");
	Map<String, String> coffeeMap = new HashMap<>();
	
	public int tot(String su, int coffeePrice) {
		int tot = Integer.parseInt(su) + coffeePrice;
		return tot;
	}
	
	public void coffeeMap() {
		coffeeMap.put("1", "아메리카노");
		coffeeMap.put("2", "카페모카");
		coffeeMap.put("3", "에스프레소");
		coffeeMap.put("4", "카페라뗴");
	}
		
%>

<%
%>
<!DOCTYPE html>
<html>
